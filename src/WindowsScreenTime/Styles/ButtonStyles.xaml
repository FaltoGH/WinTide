<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Text_Style" TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="/Resources/Fonts/#레시피코리아 Medium"/>
        <Setter Property="VerticalAlignment"
                Value="Center"/>
        <Setter Property="HorizontalAlignment"
                Value="Left"/>
        <Setter Property="Foreground"
                Value="#BBBBBB"/>
        <Setter Property="FontSize"
                Value="15"/>
        <Setter Property="Margin"
                Value="10"/>
    </Style>

    <Style x:Key="MenuButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" x:Name="back" Width="180" Height="45" Margin="0,5,0,5" CornerRadius="10">
                        <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                            <Path x:Name="path"
                              Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"
                              Width="20"
                              Fill="#CCCCCC"
                              Stretch="Uniform"/>
                            <TextBlock x:Name="text"
                                   Text="MENU"
                                   Margin="15 5 0 0"                                   
                                   Style="{StaticResource Text_Style}"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="text" Property="Foreground" Value="#FFFFFF"/>
                            <Setter TargetName="path" Property="Fill" Value="#FFFFFF"/>
                            <Setter TargetName="back" Property="Background" Value="#5e5c61"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="HomeButton" TargetType="{x:Type RadioButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{TemplateBinding Background}" x:Name="back" Width="180" Height="45" Margin="0,5,0,5" CornerRadius="10">
                            <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                                <Path x:Name="path"
                                      Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z"
                                      Width="20"
                                      Fill="#CCCCCC"
                                      Stretch="Uniform"/>
                                <TextBlock x:Name="text"
                                   Text="Home"
                                   Margin="15 5 0 0"                                   
                                   Style="{StaticResource Text_Style}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="text" Property="Foreground" Value="#FFFFFF"/>
                            <Setter TargetName="path" Property="Fill" Value="#FFFFFF"/>
                            <Setter TargetName="back" Property="Background" Value="#5e5c61"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="back" Property="Background" Value="#5e5c61"/>
                            <Setter TargetName="text" Property="Foreground" Value="#FFFFFF"/>
                            <Setter TargetName="path" Property="Fill" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

