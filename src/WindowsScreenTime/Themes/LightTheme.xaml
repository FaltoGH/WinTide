<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource LightThemeColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#999999" />
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC" />
    <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD" />
    <SolidColorBrush x:Key="ButtonBrush" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#E0E0E0" />

</ResourceDictionary>