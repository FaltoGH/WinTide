<UserControl x:Class="WindowsScreenTime.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsScreenTime.Views"
             xmlns:units="clr-namespace:SmartDateControl.UI.Units;assembly=SmartDateControl"
             xmlns:bar="clr-namespace:NavigationBar;assembly=NavigationBar"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:WindowsScreenTime.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="685" d:DesignWidth="860">

    <UserControl.Resources>
        <Style TargetType="Path">
            <Setter Property="Data" Value="M5.59,7.41L7,6L13,12L7,18L5.59,16.59L10.17,12L5.59,7.41M11.59,7.41L13,6L19,12L13,18L11.59,16.59L16.17,12L11.59,7.41Z"/>
            <Setter Property="Fill" Value="#6449FC"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#2e2e30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#eaf3fb">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <UniformGrid Columns="3" HorizontalAlignment="Center" Margin="0 0 0 0">
                    <Button Style="{StaticResource DayButton}"
                            Margin="10 0 0 0"
                            Command="{Binding SetPeriodDayCommand}"/>
                    <Button Style="{StaticResource WeekButton}"
                            Command="{Binding SetPeriodWeekCommand}"/>
                    <Button Style="{StaticResource MonthButton}"
                            Command="{Binding SetPeriodMonthCommand}"/>
                </UniformGrid>
            </Grid>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                            HorizontalAlignment="Right"
                            Text="기간별 보기" Style="{StaticResource Text_Style}"
                            Foreground="Black"
                            Margin="0 5 30 0"/>
                <units:SmartDate 
                    Grid.Column="1"
                    Width="auto"
                    HorizontalAlignment="Stretch"
                    TextBlock.FontSize="15"
                    SelectedDate="{Binding StartDate, Mode=TwoWay}"/>
                <Path 
                    Grid.Column="2"
                    Margin="10 0 10 0"
                    Width="25"
                    Stretch="Uniform"/>
                <units:SmartDate 
                    Grid.Column="3"
                    Width="auto"
                    HorizontalAlignment="Stretch"
                    TextBlock.FontSize="15"
                    SelectedDate="{Binding EndDate, Mode=TwoWay}"/>

                <materialDesign:PopupBox 
                    Grid.Column="4"
                    HorizontalAlignment="Right"
                    PlacementMode="BottomAndAlignRightEdges"
                    StaysOpen="True"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Margin="0 0 20 0">
                    <materialDesign:PopupBox.ToggleContent>
                        <materialDesign:PackIcon
                                Width="35"
                                Height="35"
                                Kind="AlarmAdd"/>
                    </materialDesign:PopupBox.ToggleContent>
                    <materialDesign:PopupBox.ToggleCheckedContent>
                        <materialDesign:PackIcon
                                Width="35"
                                Height="35"
                                Kind="Pencil"/>
                    </materialDesign:PopupBox.ToggleCheckedContent>
                    <Grid
                        Width="150"
                        Margin="8,8,8,0">
                        <Grid.Resources>
                            <Style
                                TargetType="TextBox"
                                BasedOn="{StaticResource MaterialDesignTextBox}">
                                <Setter
                                    Property="Margin"
                                    Value="8,8,8,8" />
                                <Setter
                                    Property="materialDesign:HintAssist.IsFloating"
                                    Value="True" />
                            </Style>
                        </Grid.Resources>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="8,8,8,16"
                            Style="{StaticResource Text_Style}"
                            Foreground="Black"
                            FontSize="20"
                            Text="알람 설정"/>
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="1"/>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            FontWeight="Bold"
                            VerticalAlignment="Bottom"
                            Text="  시간  "
                            Margin="0 0 0 10"/>
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            FontWeight="Bold"
                            VerticalAlignment="Bottom"
                            Text="  분  "
                            Margin="0 0 0 10"/>
                        <ComboBox
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="8"
                            materialDesign:HintAssist.IsFloating="True"
                            SelectedIndex="0"
                            MaxDropDownHeight="200">
                            <ComboBoxItem Content="00" />
                            <ComboBoxItem Content="10" />
                            <ComboBoxItem Content="20" />
                            <ComboBoxItem Content="30" />
                            <ComboBoxItem Content="40" />
                            <ComboBoxItem Content="50" />
                        </ComboBox>
                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                            <TextBlock Text="남은 시간"
                                       Style="{StaticResource Text_Style}"
                                       Margin="8 16 8 8"/>
                            <TextBlock Text="{Binding TimerLeftTime}"
                                       Margin="8 16 8 8"/>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="4"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Command="{Binding TimerSetCommand}"
                                Content="설정"
                                FontWeight="Bold"/>
                            <Button
                                Command="{Binding TimerUnsetCommand}"
                                Content="해제"
                                FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:PopupBox>
            </Grid>

            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBox x:Name="ProcessNametb" Width="200" Margin="5"/>
                    <Button Content="Add Process" Command="{Binding AddProcessCommand}"
                            CommandParameter="{Binding Text, ElementName=ProcessNametb}"
                            Margin="5"/>

                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="3" Margin="10">
                <lvc:CartesianChart
                    Series="{Binding Series}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}"
                    TooltipPosition="Hidden">
                </lvc:CartesianChart>

