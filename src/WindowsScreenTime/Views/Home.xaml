                                               Text="{Binding EditedName}"
                                               FontSize="20" Margin="10 6 0 0"
                                               Foreground="{StaticResource GraidentStyle}">
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
